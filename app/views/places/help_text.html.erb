<% 
  if @help_text.first.is_certified == 1
    title t('.title_certified', cat: @help_text.first.question_category_parent)
  else
    title t('.title_public')
  end
%>

<div id="help_text">
  <h2>
    <%= QuestionPairingDisability.human_attribute_name(:question_pairing_id) %>:
    <span><%= @help_text.first.question %></span>
  </h2>

  <% @help_text.each do |help| %>
    <div class="help-item">
      <h3><%= help.disability_name %></h3>

      <%= simple_format_no_tags(help.content, {}, {sanitize: false}) %>  
    </div>    
  <% end %>
</div>