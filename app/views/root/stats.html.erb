                    <td>
                      <%= number_with_delimiter(@images[:certified_count]) %>
                    </td>
                    <td>
                      <%= number_with_delimiter(@images[:total_count]) %>
                    </td>
                  </tr> 
                </tbody>
              </table>
            <% else %>
              <p>
                No evaluations with visual evidence have been submitted.
              </p>
            <% end %>

          </div>
        </div>
      </div>



      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#submissions-active-users">
