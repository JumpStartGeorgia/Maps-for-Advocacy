<% title t('.title') %>

<div class="row-fluid">
  <div class="span6">
    <h2>Submission Statistics</h2>

    <div class="accordion" id="stats-submissions">
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#submissions-overall">
            <h3>Evaluations Submitted</h3>
          </a>
        </div>
        <div id="submissions-overall" class="accordion-body collapse">
          <div class="accordion-inner">
            <% if @cert.present? %>
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>
                      Public Evaluations
                    </th>
                    <th>
                      Expert Evaluations
                    </th>
                    <th>
                      Total Evaluations
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>
                      <%= number_with_delimiter(@cert[:public_count]) %>
                    </td>
                    <td>
                      <%= number_with_delimiter(@cert[:certified_count]) %>
                    </td>
                    <td>
                      <%= number_with_delimiter(@cert[:total_count]) %>
                    </td>
                  </tr> 
                </tbody>
              </table>
            <% else %>
              <p>
                No evaluations have been submitted.
              </p>
            <% end %>
          </div>
        </div>
      </div>


      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#submissions-type">
            <h3>Evaluations Submitted by Type</h3>
          </a>
        </div>
        <div id="submissions-type" class="accordion-body collapse">
          <div class="accordion-inner">
            <% if @types.present? %>
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>
                      Evaluation Type
                    </th>
                    <th>
                      Public Evaluations
                    </th>
                    <th>
                      Expert Evaluations
                    </th>
                    <th>
                      Total Evaluations
                    </th>
                  </tr>
                </thead>
                <tbody>
                  <% @types.each do |type| %>
                    <tr>
                      <td>
                        <%= type[:name] %>
                      </td>
                      <td>
                        <%= number_with_delimiter(type[:public_count]) %>
                      </td>
                      <td>
                        <%= number_with_delimiter(type[:certified_count]) %>
                      </td>
                      <td>
                        <%= number_with_delimiter(type[:total_count]) %>
                      </td>
                    </tr> 
                  <% end %>
                </tbody>
              </table>

            <% else %>
              <p>
                No evaluations with have been submitted.
              </p>
            <% end %>
          </div>
        </div>
      </div>


      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#submissions-visual">
            <h3>Evaluations with Visual Evidence</h3>
          </a>
        </div>
