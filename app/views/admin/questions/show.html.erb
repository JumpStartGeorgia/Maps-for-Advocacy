<%- model_class = Question -%>
<%- model_class_trans = QuestionTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_questions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_question_path(@question), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
	<%= link_to t('helpers.links.admin'), admin_path, :class => 'btn' %>
</div>


<p><strong><%= model_class_trans.human_attribute_name(:name) %>:</strong>
<%= @question.name %></p>

<p><strong><%= model_class.human_attribute_name(:question_categories) %>:</strong>
<%= @question.question_category_names %></p>


