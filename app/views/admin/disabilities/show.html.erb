<%- model_class = Disability -%>
<%- model_class_trans = DisabilityTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_disabilities_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_disability_path(@disability), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_disability_path(@disability),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
	<%= link_to t('helpers.links.admin'), admin_path, :class => 'btn' %>
</div>


<p><strong><%= model_class_trans.human_attribute_name(:name) %>:</strong>
<%= @disability.name %></p>

<p><strong><%= model_class.human_attribute_name(:code) %>:</strong>
<%= @disability.code %></p>

<p><strong><%= model_class.human_attribute_name(:active_public) %>:</strong>
<%= @disability.active_public %></p>

<p><strong><%= model_class.human_attribute_name(:active_certified) %>:</strong>
<%= @disability.active_certified %></p>

<p><strong><%= model_class.human_attribute_name(:sort_order) %>:</strong>
<%= @disability.sort_order %></p>


