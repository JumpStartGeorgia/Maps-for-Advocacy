<%= semantic_form_for([:admin, @convention_category], :html => { :class => 'form-horizontal' }) do |f| %>
	<%= f.error_messages %>

  <% create_sorted_translation_objects(@convention_category.convention_category_translations).each do |trans| %>
		<%= f.fields_for :convention_category_translations, trans do |translation| %>

			<div id="form-<%= trans.locale %>" class="multilanguage_nested">
				<h3><%= t("app.language.#{trans.locale}") %></h3>

				<%= translation.input :name %>
				<%= translation.hidden_field :locale , :value => trans.locale %>
			</div>

		<% end %>
	<% end %>

	<%= f.inputs do %>
	  <%= f.input :right_to_accessibility, :as => :radio %>
	<% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
	  <%= f.submit nil, :class => 'btn btn-warning', :type => :reset, :value => t('app.buttons.reset'), :name => :reset %>
	  <%= link_to t('app.buttons.cancel'), admin_convention_categories_path, :class => 'btn btn-mini btn-warning' %>
  </div>
<% end %>


