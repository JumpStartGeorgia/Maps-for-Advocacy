<%- model_class = ConventionCategory -%>
<%- model_class_trans = ConventionCategoryTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>


<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_convention_categories_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_convention_category_path(@convention_category), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_convention_category_path(@convention_category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
	<%= link_to t('helpers.links.admin'), admin_path, :class => 'btn' %>
</div>


<p><strong><%= model_class_trans.human_attribute_name(:name) %>:</strong>
<%= @convention_category.name %></p>

<p><strong><%= model_class_trans.human_attribute_name(:right_to_accessibility) %>:</strong>
<%= @convention_category.right_to_accessibility %></p>


