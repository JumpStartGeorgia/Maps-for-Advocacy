<%- model_class = QuestionCategory -%>
<%- model_class_trans = QuestionCategoryTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_question_categories_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_question_category_path(@question_category), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_question_category_path(@question_category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
	<%= link_to t('helpers.links.admin'), admin_path, :class => 'btn' %>
</div>

<p><strong><%= model_class_trans.human_attribute_name(:name) %>:</strong>
<%= @question_category.name %></p>

<p><strong><%= model_class.human_attribute_name(:is_common) %>:</strong>
<%= @question_category.is_common %></p>


