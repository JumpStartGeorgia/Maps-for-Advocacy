<%- model_class = Venue -%>
<%- model_class_trans = VenueTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_venues_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_venue_path(@venue), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_venue_path(@venue),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
	<%= link_to t('helpers.links.admin'), admin_path, :class => 'btn' %>
</div>

<p><strong><%= model_class_trans.human_attribute_name(:name) %>:</strong>
<%= @venue.name %></p>

<p><strong><%= model_class.human_attribute_name(:venue_category_id) %>:</strong>
<%= @venue.venue_category_id.present? ? @venue.venue_category.name : nil %></p>

<p><strong><%= model_class.human_attribute_name(:question_category_id) %>:</strong>
<%= @venue.question_category_id.present? ? @venue.question_category.name : nil %></p>


