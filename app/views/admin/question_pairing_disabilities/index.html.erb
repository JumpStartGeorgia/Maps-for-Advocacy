<%- model_class = QuestionPairingDisability -%>
<%- model_class_trans = QuestionPairingDisabilityTranslation -%>
<% title t '.title', :default => model_class.model_name.human.pluralize %>

<table class="table table-striped display">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:certified_text) %></th>
      <th><%= model_class.human_attribute_name(:question_category) %></th>
      <th><%= model_class.human_attribute_name(:question_subcategory) %></th>
      <th><%= model_class.human_attribute_name(:question) %></th>
      <th><%= model_class.human_attribute_name(:disability_name) %></th>
      <th><%= model_class.human_attribute_name(:has_content) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @question_pairing_disabilities.each do |question_pairing_disability| %>
      <tr>
        <td><%= question_pairing_disability.certified_text %></td>
        <td><%= question_pairing_disability.question_category %></td>
        <td><%= question_pairing_disability.question_subcategory %></td>
        <td><%= question_pairing_disability.question %></td>
        <td><%= question_pairing_disability.disability_name %></td>
        <td><%= question_pairing_disability.has_content %></td>
        <td>
          <%= link_to t('app.buttons.edit'),
                      edit_admin_question_pairing_disability_path(question_pairing_disability), :class => 'btn btn-mini' %>
          <%= link_to t('app.buttons.delete'),
                      admin_question_pairing_disability_path(question_pairing_disability),
                      :method => :delete,
                      :confirm => t('app.buttons.confirm'),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


